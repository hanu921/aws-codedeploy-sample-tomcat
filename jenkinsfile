pipeline{ 

agent any

stages{

stage('checkout'){

steps{

checkout([$class: 'GitSCM', 
    branches: [[name: '*/master']], 
    doGenerateSubmoduleConfigurations: false, 
    extensions: [[$class: 'CleanCheckout']], 
    submoduleCfg: [], 
    userRemoteConfigs: [[credentialsId: ''c74ccda8-4831-463b-aa6a-3e00210c04f0', url: 'https://github.com/hanu921/aws-codedeploy-sample-tomcat.git']]
])

    }

                 }

stage('build'){

steps{
sh 'mvn package'

     }
              }

stage('deploy'){

steps{

sh 'ssh root@3.82.174.88 "/root/apache-tomcat-9.0.22/bin/shutdown.sh"'

sh 'scp /var/lib/jenkins/workspace/pipetomcat/target/SampleMavenTomcatApp.war root@3.82.174.88:/root/apache-tomcat-9.0.22/webapps'

sh 'ssh root@3.82.174.88 "/root/apache-tomcat-9.0.22/bin/startup.sh"'
     }
               }



                }

        }
